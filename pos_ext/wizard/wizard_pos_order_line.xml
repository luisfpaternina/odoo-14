<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pos_order_line_wizard" model="ir.ui.view">
        <field name="name">pos.order.line.wizard.form</field>
        <field name="model">pos.order.line.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="order_id" readonly="1"/>
                    <field name='line_id' readonly="1"/>
                    <field name="tax_ids" required="1" widget="many2many_tags"/>
                </group>

            <footer>
                <button
                    name="update_taxes"
                    string="CONFIRM"
                    type="object"
                    class="btn btn-success"/>
                <button
                    special='cancel'
                    string='CANCEL'
                    class="btn btn-danger"/>
            </footer>

            </form>
         </field>
    </record>

</odoo>